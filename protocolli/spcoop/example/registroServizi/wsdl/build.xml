<?xml version="1.0" encoding="iso-8859-1"?>
<project name="OpenSPCoop" default="" basedir=".">
	<description>
        File di Script per la compilazione o l'esecuzione del Client
    </description>

	<import file="./local_env.xml" />
	<property name="required_lib" value="${rootDir}/lib" />
	<property name="dist_openspcoop" value="${rootDir}/core/dist"/>
	<property name="dist_spcoop" value="${rootDir}/protocolli/spcoop/dist"/>



	<!-- Ripulisce la distribuzione -->
	<target name="clean">
		<delete dir="build"/>
	</target>

	<!-- Create the build directory structure used by compile -->
	<target name="init_compile">
		<mkdir dir="build" />
	</target>



	<!-- Compilazione del Client -->
	<target name="build" depends="init_compile"
        description="compila il Client" >
		<!-- Compile the java code  -->
		<javac includeantruntime="false" destdir="build" debug="true">
			<src path="src"/>
			<classpath>
				<path refid="classpath"/>
			</classpath>
		</javac>
		<copy file="src/log4j2.properties" todir="build"/>
	</target>


	<!-- Run the Client -->
	<target name="run" depends=""
        description="Esegue il Client" >
		<!-- Run the java code  -->
		<java classname="org.openspcoop2.core.registry.wsdl.testsuite.Testsuite" fork="true">
			<arg value="${parameter}" />
			<classpath>
				<path refid="classpath" />
				<pathelement path="build"/>
			</classpath>
		</java>

	</target>

	<!-- Classpath -->
	<path id="classpath">
		<fileset dir="${dist_openspcoop}" includes="*.jar"/>
		<fileset dir="${dist_spcoop}" includes="*.jar"/>
		<fileset dir="${required_lib}/log" includes="*.jar"/>
		<fileset dir="${required_lib}/shared" includes="wsdl4j-1.6.3.jar"/>
		<fileset dir="${required_lib}/shared" includes="velocity-1.7.jar"/>
		<fileset dir="${required_lib}/cxf" includes="cxf-tools-validator-3.1.7.jar"/>
		<fileset dir="${required_lib}/cxf" includes="cxf-tools-wsdlto-core-3.1.7.jar"/>
		<fileset dir="${required_lib}/cxf" includes="cxf-tools-wsdlto-frontend-jaxws-3.1.7.jar"/>
		<fileset dir="${required_lib}/cxf" includes="cxf-tools-wsdlto-databinding-jaxb-3.1.7.jar"/>
		<fileset dir="${required_lib}/cxf" includes="cxf-tools-common-3.1.7.jar"/>
		<fileset dir="${required_lib}/cxf" includes="cxf-core-3.1.7.jar"/>
		<fileset dir="${required_lib}/cxf" includes="cxf-rt-wsdl-3.1.7.jar"/>
		<fileset dir="${required_lib}/cxf" includes="cxf-rt-frontend-jaxws-3.1.7.jar"/>
		<fileset dir="${required_lib}/cxf" includes="cxf-rt-frontend-simple-3.1.7.jar"/>
		<fileset dir="${required_lib}/cxf" includes="cxf-rt-databinding-jaxb-3.1.7.jar"/>
		<fileset dir="${required_lib}/cxf" includes="cxf-rt-bindings-soap-3.1.7.jar"/>	
		<fileset dir="${required_lib}/cxf" includes="stax2-api-3.1.4.jar"/>
		<fileset dir="${required_lib}/cxf" includes="woodstox-core-asl-4.4.1.jar"/>
		<fileset dir="${required_lib}/cxf" includes="xmlschema-core-2.2.1.jar"/>
		<fileset dir="${required_lib}/cxf" includes="xml-resolver-1.2.jar"/>
		<fileset dir="${required_lib}/cxf" includes="javax.ws.rs-api-2.0.1.jar"/>
		<fileset dir="${required_lib}/javax" includes="javax.servlet.jar"/>
		<fileset dir="${required_lib}/saaj" includes="*.jar"/>
		<fileset dir="${required_lib}/jax" includes="*.jar"/>
		<fileset dir="${required_lib}/commons" includes="commons-collections-3.2.2.jar"/>
		<fileset dir="${required_lib}/commons" includes="commons-lang-2.6.jar"/>
	</path>



</project>
