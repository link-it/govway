<?xml version="1.0"?>

<project name="RiceviNotifica_v1.0"  basedir=".">

	<import file="local_env.xml"/>
	
	<!-- estensione di ant (if .... ) -->
	<taskdef resource="net/sf/antcontrib/antlib.xml">
		<classpath>
			<pathelement location="${openspcoop2_lib}/ant/ant-contrib-1.0b3.jar"/>
		</classpath>
	</taskdef>
	
	<!-- set properties for this build -->
	<property name="src_sdi_riceviNotifica_v10" location="src" />
	<property name="build_sdi_riceviNotifica_v10" location="build" />
	<property name="dist_sdi_riceviNotifica_v10" location="dist" />

	
	<!-- CLASSPATH -->
	<path id="classpath_compile" >
		<fileset dir="${openspcoop2_lib}" >
			<include name="**/cxf/*"/>
			<include name="**/saaj/*"/>
			<include name="**/jetty/*"/>
			<include name="**/security/*"/>
			<include name="**/httpcore/*"/>
			<include name="**/commons/*"/>
			<include name="**/shared/*"/>
            <include name="**/spring/*"/>
			<include name="**/jax/*"/>
			<include name="**/jibx/*"/>
			<include name="**/log/*"/>
		</fileset>
        <fileset dir="${openspcoop2_core_dist}" >
                <include name="*.jar"/>
        </fileset>
        <fileset dir="${openspcoop2_sdi_dist}" >
                <include name="*.jar"/>
        </fileset>
	</path>
	<path id="classpath_dist" >
		<fileset dir="${dist_sdi_riceviNotifica_v10}" >
			<include name="*.jar"/>
		</fileset>
	</path>
	
	<!-- Ripulisce la distribuzione -->
	<target name="-clean_sdi_riceviNotifica_v10">
		<delete dir="${build_sdi_riceviNotifica_v10}" />
		<delete dir="${dist_sdi_riceviNotifica_v10}" />
		<delete dir="${doc_sdi_riceviNotifica_v10}" />
	</target>

	<!-- Create the build directory structure used by compile -->
	<target name="-init_compile_sdi_riceviNotifica_v10">
		<mkdir dir="${build_sdi_riceviNotifica_v10}" />
		<mkdir dir="${dist_sdi_riceviNotifica_v10}" />
	</target>
	
	
	
	<!-- Compilazione del Servizio -->
	<target name="-compile_compile_sdi_riceviNotifica_v10" depends="-init_compile_sdi_riceviNotifica_v10" description="compila il servizio">
		<!-- Compile the java code  -->
		<javac includeantruntime="false" destdir="${build_sdi_riceviNotifica_v10}" debug="${debug}">
			<!--<compilerarg value="-Xlint:unchecked"/>
                        <compilerarg value="-Xlint:deprecation"/>-->
			<src path="${src_sdi_riceviNotifica_v10}" />
			<classpath refid="classpath_compile" />
		</javac>
		<jar jarfile="${dist_sdi_riceviNotifica_v10}/openspcoop2_sdi-protocol_example_server_riceviNotifica.jar">
			<zipfileset dir="${build_sdi_riceviNotifica_v10}" />
			<zipfileset dir="${src_sdi_riceviNotifica_v10}" includes="*.xml" />
    	</jar>
	</target>
	
	
	<!-- Esecuzione del server -->
	<target name="-run_server_sdi_riceviNotifica_v10" description="esegue il server che fruisce del servizio">
	 <java classname="org.openspcoop2.example.pdd.server.sdi.ricevi_notifica.SdIRiceviNotifica_SdIRiceviNotificaPort_Server" fork="yes">
            <classpath>
                <path refid="classpath_compile"/>
            	<path refid="classpath_dist"/>
                <pathelement location="." />
            </classpath>
	    <jvmarg value="-Dcom.sun.xml.ws.transport.http.client.HttpTransportPipe.dump=true" />
        </java>
	</target>
	
	
	
	<!-- alias -->
	<target name="build" depends="-compile_compile_sdi_riceviNotifica_v10" />
	<target name="clean" depends="-clean_sdi_riceviNotifica_v10" />
	<target name="run_server" depends="-run_server_sdi_riceviNotifica_v10" />
	
</project>
