<?xml version="1.0"?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	
	
		<converter>
		<converter-id>pluginAllarmeConverter</converter-id>
		<converter-class>org.openspcoop2.web.monitor.allarmi.converter.PluginConverter</converter-class>
	</converter>

	<managed-bean>
		<managed-bean-name>allarmiDM</managed-bean-name>
		<managed-bean-class>org.openspcoop2.web.monitor.allarmi.datamodel.AllarmiDM</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>dataProvider</property-name>
			<property-class>org.openspcoop2.web.monitor.allarmi.dao.IAllarmiService</property-class>
			<value>#{allarmiService}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>allarmeHistoryDM</managed-bean-name>
		<managed-bean-class>org.openspcoop2.web.monitor.allarmi.datamodel.AllarmeHistoryDM</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>dataProvider</property-name>
			<property-class>org.openspcoop2.web.monitor.allarmi.dao.IAllarmiService</property-class>
			<value>#{allarmiService}</value>
		</managed-property>
		<managed-property>
			<property-name>allarmiBean</property-name>
			<property-class>org.openspcoop2.web.monitor.allarmi.mbean.AllarmiBean</property-class>
			<value>#{allarmiBean}</value>
		</managed-property>
	</managed-bean>
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>allarmi</from-outcome>
			<to-view-id>/allarmi/pages/list/statoAllarmi.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/allarmi/pages/list/statoAllarmi.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>allarme</from-outcome>
			<to-view-id>/allarmi/pages/form/allarme.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/allarmi/pages/form/allarme.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{allarmiBean.salva}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/allarmi/pages/list/statoAllarmi.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>visualizzaHistoryAllarme</from-outcome>
			<to-view-id>/allarmi/pages/list/allarmeHistory.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/allarmi/pages/list/allarmeHistory.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>stato</from-outcome>
			<to-view-id>/allarmi/pages/form/allarme.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>