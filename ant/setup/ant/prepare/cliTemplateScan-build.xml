
<project name="prepare-setup-templateScan" basedir=".">
	
	<description>
        	PREPARE SETUP CLI TEMPLATE SCAN
	</description>

	
	<target name="prepare_cliTemplateScan_setup">
	
		<mkdir dir="${deploy_sw}/tools"/>
		<mkdir dir="${deploy_sw}/tools/tmp_dist"/>
		<mkdir dir="${deploy_sw}/tools/tmp_empty"/>

		<delete includeEmptyDirs="true" failonerror="false">
		    <fileset dir="${deploy_sw}/tools/govway-template-scan" includes="*"/>
		</delete>
		<delete dir="${deploy_sw}/tools/govway-template-scan" failonerror="false"/>

		<antcall target="distrib_cliTemplateScan">
			<param name="rootDir" value="${rootDir}"/>
			<param name="openspcoop2" value="${rootDir}"/>
			<param name="required_lib" value="${required_lib_cliTemplateScan}"/>
			<param name="required_lib_cliTemplateScan" value="${required_lib_cliTemplateScan}"/>
			<param name="openspcoop2.lib" value="${required_lib_cliTemplateScan}"/>
			<param name="openspcoop2.dist" value="${deploy_sw_openspcoop2_jars}"/> <!-- usato per prendere i jar di openspcoop2 -->
			<param name="src_cliTemplateScan" value="${src_cliTemplateScan}"/>
			<param name="build_cliTemplateScan" location="build/templateScan" />
			<param name="buildAPI" value="false" />
			<param name="properties_cliTemplateScan" value="${cliTemplateScan}/properties"/>
			<param name="script_cliTemplateScan" value="${cliTemplateScan}/script"/>
			<param name="dist_cliTemplateScan" value="${deploy_sw}/tools/tmp_dist"/>
			<param name="distrib_cliTemplateScan" value="${deploy_sw}/tools/govway-template-scan"/>
			<param name="openspcoop2.protocollo.trasparente.dist" value="${deploy_sw}/tools/tmp_empty"/>
			<param name="openspcoop2.protocollo.spcoop.dist" value="${deploy_sw}/tools/tmp_empty"/>
			<param name="openspcoop2.protocollo.modipa.dist" value="${deploy_sw}/tools/tmp_empty"/>
			<param name="openspcoop2.protocollo.sdi.dist" value="${deploy_sw}/tools/tmp_empty"/>
		</antcall>
		<delete includeEmptyDirs="true">
		    <fileset dir="${deploy_sw}/tools/tmp_dist" includes="*"/>
		</delete>
		<delete dir="${deploy_sw}/tools/tmp_dist"/>
		<delete dir="${deploy_sw}/tools/tmp_empty"/>
		<delete dir="build" includeEmptyDirs="true"/>

		<!-- Converto jar in txt -->
		<antcall target="replace_jar_with_txt">
			<param name="archiveFileJarLocation" value="${deploy_sw}/tools/govway-template-scan/lib"/>
			<param name="deploy_sw" value="${deploy_sw}"/>		
		</antcall>

	</target>
	
	
</project>
