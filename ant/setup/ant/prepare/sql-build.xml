			<param name="sql_audit" value="${sql_audit}"/>
			<param name="sql_users" value="${sql_users}"/>
			<param name="dist_govwayConsole" value="${deploy_sql}/${TIPO_DB}/"/>
			<param name="buildSQLSinglePdD_addArchivioComunicazioni" value="false"/>
		</antcall>
		
