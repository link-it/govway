	<!-- SQL -->
	<target name="prepare_sql_setup">
				
		<if>
			<not>
				<available file="${core}/local_env.xml"/>
			</not>
			<then>
				<copy file="${core}/local_env.xml.template" tofile="${core}/local_env.xml" />
			</then>
		</if>
			
