	<import file="../../ant/commons/utils.xml" />

	<!-- Creazione Manifest per EJB/WAR di OpenSPCoop2 -->
	<var name="manifest.classpath.3parti" value="" />
	<var name="manifest.classpath.openspcoop" value="" />
