						<if>
							<and>
								<not>
									<equals arg1="${hazelcastLibraries}" arg2="true"/>
								</not>							
							</and>
							<then>
								<replace file="${build}/tmp/jboss-deployment-structure.xml" token="&lt;path name=&quot;sun/misc&quot;/>" value="&lt;!-- &lt;path name=&quot;sun/misc&quot;/> -->"/>					
							</then>
						</if>
						<if>
							<and>
								<not>
