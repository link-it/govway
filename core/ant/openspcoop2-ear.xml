							</and>
							<then>
								<replace file="${build}/tmp/jboss-deployment-structure.xml" token="&lt;path name=&quot;sun/reflect&quot;/>" value="&lt;!-- &lt;path name=&quot;sun/reflect&quot;/> -->"/>					
